{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    // Cache static assets aggressively
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    // Serve all other routes via index.html (SPA fallback)
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": { "cache-control": "no-cache" }  // Disable cache for HTML
    }
  ]
}
